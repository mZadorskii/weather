<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/recent_location_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingBottom="@dimen/recycler_item_vertical_offset"
        android:paddingLeft="@dimen/recycler_item_left_offset"
        android:paddingStart="@dimen/recycler_item_left_offset"
        android:paddingTop="@dimen/recycler_item_vertical_offset"
        android:textSize="24sp" />

</LinearLayout>